{
  "swagger": "2.0",
  "info": {
    "title": "API - Viagem365",
    "description": "MVP da aplicação BackEnd",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "authorization",
      "description": "Token Autenticação de usuário"
    }
  },
  "paths": {
    "/usuarios/": {
      "post": {
        "tags": [
          "Usuário"
        ],
        "summary": "Cadastrar novo usuário",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Este endpoint cria um novo usuário",
            "schema": {
              "type": "object",
              "properties": {
                "cpf_usuario": {
                  "type": "string",
                  "example": "06954171778"
                },
                "nome_usuario": {
                  "type": "string",
                  "example": "Mario Guerreiro"
                },
                "sexo_usuario": {
                  "type": "string",
                  "example": "Masculino"
                },
                "cep_usuario": {
                  "type": "string",
                  "example": "88060-400"
                },
                "email_usuario": {
                  "type": "string",
                  "example": "mariog@gmail.com"
                },
                "senha_usuario": {
                  "type": "string",
                  "example": "123456"
                },
                "nascimento_usuario": {
                  "type": "string",
                  "example": "1984-06-26"
                }
              },
              "required": [
                "cpf_usuario",
                "nome_usuario",
                "sexo_usuario",
                "cep_usuario",
                "email_usuario",
                "senha_usuario",
                "nascimento_usuario"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso"
          },
          "400": {
            "description": "Erro de validação, CPF inválido ou campos faltando"
          },
          "409": {
            "description": "Usuário já cadastrado no sistema"
          },
          "500": {
            "description": "Erro ao cadastrar o usuário"
          }
        }
      },
      "get": {
        "tags": [
          "Usuário"
        ],
        "summary": "Listar todos os usuários",
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/usuarios/{id}": {
      "get": {
        "tags": [
          "Usuário"
        ],
        "summary": "Buscar usuário por ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Este endpoint busca usuário pelo ID",
            "schema": {
              "type": "object",
              "properties": {
                "nome_usuario": {
                  "type": "string",
                  "example": "Mario Guerreiro"
                },
                "sexo_usuario": {
                  "type": "string",
                  "example": "Masculino"
                },
                "cep_usuario": {
                  "type": "string",
                  "example": "88060-400"
                },
                "email_usuario": {
                  "type": "string",
                  "example": "mariog@gmail.com"
                },
                "nascimento_usuario": {
                  "type": "string",
                  "example": "1984-06-26"
                }
              },
              "required": [
                "nome_usuario",
                "sexo_usuario",
                "cep_usuario",
                "email_usuario",
                "nascimento_usuario"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "500": {
            "description": "Erro ao buscar o usuário pelo ID"
          }
        }
      },
      "put": {
        "tags": [
          "Usuário"
        ],
        "summary": "Atualizar usuário por ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do usuário ao ser atualizado",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Este endpoint permite editar informações do usuário por ID",
            "schema": {
              "type": "object",
              "properties": {
                "nome_usuario": {
                  "type": "string",
                  "example": "Mario Guerreiro"
                },
                "sexo_usuario": {
                  "type": "string",
                  "example": "Masculino"
                },
                "cep_usuario": {
                  "type": "string",
                  "example": "88060-400"
                },
                "email_usuario": {
                  "type": "string",
                  "example": "mariog@gmail.com"
                },
                "senha_usuario": {
                  "type": "string",
                  "example": "123456"
                },
                "nascimento_usuario": {
                  "type": "string",
                  "example": "1984-06-26"
                }
              },
              "required": [
                "nome_usuario",
                "sexo_usuario",
                "cep_usuario",
                "email_usuario",
                "senha_usuario",
                "nascimento_usuario"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário atualizado com sucesso"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Você não tem permissão para editar este usuário"
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "500": {
            "description": "Erro ao buscar o usuário pelo ID"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "delete": {
        "tags": [
          "Usuário"
        ],
        "summary": "Deletar usuário por ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Este endpoint permite remover um usuário por ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário deletado com sucesso"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Este usuário não pode ser deletado pois tem destinos associados"
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "500": {
            "description": "Erro ao buscar o usuário pelo ID"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/destinos/": {
      "post": {
        "tags": [
          "Destino"
        ],
        "summary": "Cadastrar Novo Destino",
        "description": "",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Adiciona um novo Destino",
            "schema": {
              "type": "object",
              "properties": {
                "nome_destino": {
                  "type": "string",
                  "example": "Praia do Canto"
                },
                "cep_destino": {
                  "type": "string",
                  "example": "88190000"
                },
                "img_destino": {
                  "type": "string",
                  "example": "url_img/teste.com"
                },
                "descricao_destino": {
                  "type": "string",
                  "example": "Lugar muito lindo"
                }
              },
              "required": [
                "nome_destino",
                "cep_destino",
                "img_destino",
                "descricao_destino"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Destino cadastrado com sucesso"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Usuario sem permissão"
          },
          "404": {
            "description": "Destino não encontrado"
          },
          "409": {
            "description": "Destino já cadastrado para este Usuário"
          },
          "500": {
            "description": "Erro Geral"
          }
        }
      },
      "get": {
        "tags": [
          "Destino"
        ],
        "summary": "Listar todos os destinos do usuário logado",
        "description": "Rota para listar todos os locais cadastrados pelo usuário autenticado.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Destino listado com sucesso"
          },
          "401": {
            "description": "Usuario sem permissão."
          },
          "403": {
            "description": "Usuario sem permissão para listar Destinos de outro usuário"
          },
          "404": {
            "description": "Destino não encontrado"
          },
          "500": {
            "description": "Erro Geral"
          }
        }
      }
    },
    "/destinos/{id}": {
      "get": {
        "tags": [
          "Destino"
        ],
        "summary": "Listar Destino especifico do Usuário",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Destino Listado com sucesso"
          },
          "401": {
            "description": "Usuario sem permissão."
          },
          "403": {
            "description": "Usuario sem permissão para listar Destino de outro usuário"
          },
          "404": {
            "description": "Destino não encontrado"
          },
          "500": {
            "description": "Erro Geral"
          }
        }
      },
      "put": {
        "tags": [
          "Destino"
        ],
        "summary": "Alterar o Destino do usuário Logado",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Alterar um Destino"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Destino alterado com sucesso"
          },
          "401": {
            "description": "Usuario sem permissão."
          },
          "403": {
            "description": "Usuario sem permissão para alteração deste Destino"
          },
          "404": {
            "description": "Destino não encontrado"
          },
          "500": {
            "description": "Erro Geral"
          }
        }
      },
      "delete": {
        "tags": [
          "Destino"
        ],
        "summary": "Rota para Excluir um Destino do usuário Logado",
        "description": "Rota para excluir informações de um destino específico cadastrado pelo usuário.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Destino excluido com sucesso"
          },
          "401": {
            "description": "Usuario sem permissão."
          },
          "403": {
            "description": "Usuario sem permissão para exclusão deste Destino"
          },
          "404": {
            "description": "Destino não encontrado"
          },
          "500": {
            "description": "Erro Geral"
          }
        }
      }
    },
    "/login/": {
      "post": {
        "tags": [
          "Login"
        ],
        "summary": "Gerar Token para o usuário",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "criar o Token do Usuário",
            "schema": {
              "type": "object",
              "properties": {
                "email_usuario": {
                  "type": "string",
                  "example": "mariog@gmail.com"
                },
                "senha_usuario": {
                  "type": "string",
                  "example": "123456"
                }
              },
              "required": [
                "email_usuario",
                "senha_usuario"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Token criado com Sucesso"
          },
          "400": {
            "description": "Campo Obrigatório"
          },
          "403": {
            "description": "Usuário sem Permissão"
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "500": {
            "description": "Erro Geral"
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "Dashboard"
        ],
        "summary": "Obter dados do dashboard público",
        "description": "Endpoint para retornar o total de locais de visitação e o número de usuários ativos.",
        "responses": {
          "200": {
            "description": "Dados do dashboard obtidos com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "total_locais": {
                  "type": "number",
                  "example": 123
                },
                "usuarios_ativos": {
                  "type": "number",
                  "example": 456
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Erro ao obter os dados do dashboard"
          }
        }
      }
    }
  },
  "security": [
    {
      "apiKeyAuth": []
    }
  ]
}